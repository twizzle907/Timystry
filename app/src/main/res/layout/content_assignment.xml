<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rls.twizz_000.timystry.Assignment"
    tools:showIn="@layout/activity_assignment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Assignments"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Assignment"
        android:id="@+id/btnNewAssg"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:onClick="openNewAssignment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Assignment"
        android:id="@+id/btnEditAssg"
        android:layout_below="@+id/btnNewAssg"
        android:layout_alignLeft="@+id/btnNewAssg"
        android:layout_alignStart="@+id/btnNewAssg"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Assignments"
        android:id="@+id/ViewAssignments"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/btnEditAssg"
        android:layout_centerHorizontal="true"
        android:onClick="openViewAll"/>/>
</RelativeLayout>
